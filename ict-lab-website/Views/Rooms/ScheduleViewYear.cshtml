@model RoomScheduleViewModel

<table class="table table-bordered table-striped">
    <thead>
        <tr class="success">
            <th colspan="8">Reservations</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 1; i <= 10; i+=3)
        {
            <tr>
            @for (int j = i; j <= i+2; j++)
            {
                <td>
                    <a asp-action="Schedule" asp-route-id="@Model.Room.Id" asp-route-view="@ScheduleView.Month" asp-route-dateTime="@Model.DateAndTime.Year-@j-1">
                        <div style="width:100%; height:100%">
                            @(new DateTime(Model.DateAndTime.Year, j, Model.DateAndTime.Day).ToString("MMMM"))
                        </div>
                    </a>
                </td>
            }
            </tr>
        }
    </tbody>
    </table>