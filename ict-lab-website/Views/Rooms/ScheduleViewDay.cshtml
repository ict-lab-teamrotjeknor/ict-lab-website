@model RoomScheduleViewModel

<table class="table table-bordered table-striped">
    <thead>
        <tr class="success">
            <th>Lesson hour</th>
            <th style="width: 85%">Reservations on @Model.DateAndTime.ToString("dddd, d MMMM yyyy")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var hour in Model.Room.RoomSchedule.GetReservationsForDay(Model.DateAndTime, Model.Room.Name))
        {
            if (hour.Value != null)
            {
        <tr>
            <th>@hour.Key</th>
            <td class="dayview-reservation">
                @Html.Raw(hour.Value.Course) - @hour.Value.Teacher - @hour.Value.Class
                <a class="btn btn-default" href="#"><span class="glyphicon glyphicon-pencil"></span></a>
            </td>

        </tr>
            }
            else
            {
                <tr>
                    <th>@hour.Key</th>
                    <td class="dayview-reservation">
                        <a class="btn btn-default" asp-controller="Rooms" asp-action="AddReservation" asp-route-roomName="@Model.Room.Name" asp-route-startLessonHour="@hour.Key"><span class="glyphicon glyphicon-plus"></span></a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

