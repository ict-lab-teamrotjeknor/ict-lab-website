@model IEnumerable<ict_lab_website.Models.Room>

@{
    ViewData["Title"] = "Rooms";
}

<h2>Rooms</h2>

<form class="form-inline">
    <div class="form-group">
        <label for="Searchbar">Search</label>
        <input type="search" class="form-control" id="Searchbar">
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

<table class="table">
    <thead>
        <tr>
                <th>
                    @Html.DisplayNameFor(model => model.ID)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.RoomCode)
                </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (Room room in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => room.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => room.RoomCode)
            </td>
            <td>
                <a asp-action="Schedule" asp-route-id="@room.ID" asp-route-dateTime="@DateTime.Today">View schedule</a>
            </td>
        </tr>
}
    </tbody>
</table>

<p>
    <a asp-action="Create">Create New</a>
</p>
