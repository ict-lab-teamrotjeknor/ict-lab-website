@using System.Data
@model UsersViewModel


<br>
<br>

<div class="col-md-10 col-md-offset-1" style="padding-top:10px;">
    <div class="well">
        <table class="table table-bordered">
            <thead>
                <tr class="success">
                    <th colspan="2">
                      <form class="navbar-form" role="search">
                        <div class="input-group add-on">
                          <input class="form-control" placeholder="Search" name="srch-term" id="srch-term" type="text">
                          <div class="input-group-btn">
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                          </div>
                        </div>
                      </form>
                    </th>  
                </tr>
            </thead>
            <tbody>
                
                @foreach (DataRow row in Model._dataTable.Rows)
                {
                    <tr>
                        <td>@row["Email"]</td>
                            <td>
                            <button class="btn btn-default" id="editUser" type="submit"><i class="glyphicon glyphicon-pencil"></i></button>
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-user"></i></button>
                            <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-remove"></i></button>
                            <button class="btn btn-default" id="sendMessage" type="submit"><i class="glyphicon glyphicon-comment"></i></button>
                        </td>
                    </tr>
                }
                
            </tbody>
        </table>

        <div class="modal fade" tabindex="-1" id="editModal"
             data-keyboard="false" data-backdrop="static">
            <div class="modal-dialog modal-md">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            &times;
                        </button>
                        <h4 class="modal-title">Edit User</h4>
                    </div>
                    <div class="modal-body">
                            <h2 class="modal-title"></h2>
                            <table class="table table-bordered">
                                <thead>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>
                                            <div class="form-horizontal">
                                              @using (Html.BeginForm("Index", "Users"))
                                              {
                                                  for(int i = 0; i < Model._roleList.Roles.Count; i++)
                                                  {
                                                     @Html.CheckBoxFor(m => Model._roleList.Roles[i].IsChecked)
                                                     @Model._roleList.Roles[i].Text
                                                     @Html.HiddenFor(m => Model._roleList.Roles[i].Value)
                                                     @Html.HiddenFor(m => Model._roleList.Roles[i].Text)<br />
                                                  }
                                                <div class="col-md-offset-2 col-md-10">
                                                    <input type="submit" value="Save" class="btn btn-default" />
                                                </div>
                                              }
                                              <p>@ViewBag.selectRole</p>
                                            </div>
                                        </td>
                                    </tr>
                                    <form method="post" asp-controller="Users" asp-action="changeReservationLimit">
                                    <tr>
                                        <td><b>Reservation Limit</b></td>
              x                          <td>5</td>
                                        <td><input asp-for="_reservationLimit" type="number" id="txtReservationLimit" placeholder="Enter number" /></td>
                                    </tr>
                                        
                                    <tr class="success">
                                        <td>
                                            <input class="btn btn-success" type="submit" value="Save" />
                                        </td>
                                    </tr>
                                    </form>
                                </tbody>
                            </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="modal fade" tabindex="-1" id="sendMessageModal"
             data-keyboard="false" data-backdrop="static">
            <div class="modal-dialog modal-md">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">
                            &times;
                        </button>
                        <h4 class="modal-title">Send Message</h4>
                    </div>
                    <div class="modal-body">
                        <form>
                            <input style="height:200px; width:550px;" type="text" placeholder="Enter your text here ..."/>
                        </form>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success"
                                data-dismiss="modal">
                            Send
                        </button>
                    </div>
                </div>
            </div>
        </div>

        
        
        <div id="divError" class="alert alert-danger collapse">
            <a id="linkClose" href="#" class="close">&times;</a>
            <div id="divErrorText"></div>
        </div>
    </div>
</div>

@section Scripts {
  <script type="text/javascript" src="/scripts/main.js"></script>

  <script type="text/javascript">
      $('#editUser').click(function(){
          $('#editModal').modal('show');
      });

      $('#sendMessage').click(function(){
          $('#sendMessageModal').modal('show');
      });
  </script>
}
