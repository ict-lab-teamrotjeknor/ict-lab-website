@model RoomScheduleViewModel

<table class="table table-bordered table-striped">
    <thead>
        <tr class="success">
            <th colspan="8">Reservations for @Model.DateAndTime.ToString("MMMM yyyy")</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 1; i <= DateTime.DaysInMonth(Model.DateAndTime.Year, Model.DateAndTime.Month); i += 7)
        {

            <tr>
                @for (int j = i; j < i + 7; j++)
                {
                    if (j > DateTime.DaysInMonth(Model.DateAndTime.Year, Model.DateAndTime.Month))
                    {
                        break;
                    }
                    <td>
                        <a asp-action="Index" asp-route-roomName="@Model.RoomName" asp-route-view="ScheduleViewDay" asp-route-dateTime="@Model.DateAndTime.Year-@Model.DateAndTime.Month-@j">
                            <div style="width:100%; height:100%">@j</div>
                        </a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

